{
  "version": "0.2.0",
  "name": "快递助手",
  "manifest_version": 2,
  "homepage_url": "https://github.com/minosss/express-plus",
  "description": "轻松管理你的快递",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' chrome-extension-resource: 'sha256-cN1Sfc6171M9m5d5PIOCLDsyMDeKmJ8TFbKNGQq7OpM='; object-src 'self'"
}
